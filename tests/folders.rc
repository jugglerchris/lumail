function dump_selected()
    io.write("Selected: offset="..maildir_offset().."\n")
    for i,f in ipairs(selected_folders()) do
       io.write(" "..i.."  "..f.."\n")
    end
end
set_selected_folder("output/md2")
dump_selected()
